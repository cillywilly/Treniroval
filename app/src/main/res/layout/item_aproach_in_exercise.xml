<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/approachInExercise"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="podhod"
        app:layout_constraintEnd_toStartOf="@+id/repeatInExercise"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repeatInExercise"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="povrtoreniya"
        app:layout_constraintEnd_toStartOf="@+id/worckloadInExercise"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/worckloadInExercise"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:text="kg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>