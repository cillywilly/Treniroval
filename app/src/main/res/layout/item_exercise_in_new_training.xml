<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutNewTraining"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    tools:context=".ItemLayout.item_layout_exercise_new_training"
    tools:ignore="MissingDefaultResource">

        <TextView
            android:id="@+id/exerciseNameInNewTraining"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="@string/Exercise" />

        <ListView
            android:id="@+id/approachesInNewTraining"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    <ImageButton
        android:id="@+id/addApproachButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0.01"
        android:background="@android:drawable/ic_input_add"
        android:onClick="onClickAddApproach"
        tools:ignore="OnClick"
        tools:visibility="visible" />
</LinearLayout>